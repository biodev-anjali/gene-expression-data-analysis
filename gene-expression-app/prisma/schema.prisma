datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model GeneExpressionRun {
  id                String   @id @default(uuid())
  fileName          String?
  fileHash          String   @unique
  genes             Int
  samples           Int
  meanExpr          Float?
  upregulatedGenes  Int?
  downregulatedGenes Int?
  foldChangeData    String?  // JSON string storing fold change analysis
  createdAt         DateTime @default(now())
}
